@using StudentsManagement.Client.Services
@using StudentsManagement.Shared.Models
@inject NavigationManager navigation

@page "/students-list"


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Students List</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <p><a class="btn btn-success float-end" href="/add-student"> Add New Student </a></p>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header"></div>
                            @if (Students!.Any())
                            {
                                <div class="card-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Student No</th>
                                                <th>FirstName</th>
                                                <th>MiddleName</th>
                                                <th>LastName</th>
                                                <th>Email</th>
                                                <th>Address</th>
                                                <th>Phone</th>
                                                <th>Country</th>
                                                <th>Gender</th>
                                                <th>DOB</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in Students!)
                                            {
                                                <tr>
                                                    <td>@student.StudentNo</td>
                                                    <td>@student.FirstName</td>
                                                    <td>@student.MiddleName</td>
                                                    <td>@student.LastName</td>
                                                    <td>@student.EmailAddress</td>
                                                    <td>@student.Address</td>
                                                    <td>@student.PhoneNumber</td>
                                                    <td>@student.Country</td>
                                                    <td>@student.Gender</td>
                                                    <td>@student.DOB</td>
                                                    <td>
                                                        <a class="btn btn-success" href="/student/edit/@student.Id"> Edit </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger" href="/student/delete/@student.Id"> Delete </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info"> There is not Students List Availlable</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Student>? Students = new List<Student>();

    private async Task LoadAllStudent()
    {
        var students = await StudentService.GetAllStudentsAsync();
        Students!.Clear();
        if (students is null) return;

        foreach(var student in students)
        {
            Students.Add(student);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadAllStudent();
    }

}
